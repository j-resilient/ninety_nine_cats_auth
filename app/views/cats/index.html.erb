<main class="index-main">
  <nav class="flex">
    <h1>All of the cats in the world</h1>
    <% if current_user %>
      <%= link_to(new_cat_url) do %>
        <%= "Add cat" %> <i class="fa fa-plus"></i>
      <% end %>
    <% end %>
  </nav>

  <%= render 'shared/errors' %>

  <section class="grid">
    <% @cats.each do |cat| %>
      <div class="cat-frame">
        <div class="cat-holder">
          <%= image_tag 'cat_kelvin_valerio.jpg', alt: "Cat with green eyes by Kelvin Valerio" %>
          <%= link_to cat.name, cat_url(cat) %>
        </div>
      </div>
    <% end %>
  </section>
</main>
